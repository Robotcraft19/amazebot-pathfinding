<!-- maze.launch: launch stage with a maze_solver node -->

<launch>
    <!-- Run robot_bringup launch file -->
    <include file="$(find amazebot-pathfinding)/launch/robot_bringup.launch"/>

    <!-- Run lidar node -->
    <include file="$(find amazebot-pathfinding)/launch/lidar.launch"/>

    <!-- Run gmapping -->
    <include file="$(find amazebot-pathfinding)/launch/gmapping.launch"/>

    <!-- Run maze_basic node -->
    <node pkg="amazebot-pathfinding" type="maze_basic" name="maze_basic" output="screen"/>
    <param name="left" type="bool" value="true" />
    <param name="right" type="bool" value="false" />
    <param name="robot_lost" type="bool" value="false" />

    <!-- Run map saver node, periodically saves map and robot position backups -->
    <node pkg="amazebot-pathfinding" type="map_saver" name="map_saver_controller_node" output="screen"/>
</launch>
